
  <div class="container my-5">
    <h1 class="text-center mb-4">Latest News on Custom Page</h1>
    <div class="row g-4">
      <!-- News Item -->
      {% if data is not empty %}
        {% for item in data %}
            <div class="col-md-4">
                <div class="card h-100">
                <img src="{{ item.urlToImage }}" class="card-img-top" alt="News Image">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">{{ item.title }}</h5>
                    <p class="card-text text-muted">Published on: {{ item.publishedAt| date('U') | format_date('custom', 'F d, Y') }}</p>
                    <p class="card-text">Author: {{ item.author }}</p>
                    <p class="card-text flex-grow-1">{{ item.description }}</p>
                    <a href="#" class="btn btn-primary mt-auto">Read More</a>
                </div>
                </div>
            </div>
        {% endfor %}
      {% else %}
      <h3>No News for now.</h3>
      {% endif %}
    </div>
  </div>
